@using Blazored.Toast.Configuration
<BlazoredToasts Position="ToastPosition.TopRight"
				Timeout="10"
				IconType="IconType.FontAwesome"
				SuccessClass="success-toast-override"
				SuccessIcon="fa-solid fa-check"
				ErrorIcon="fa-solid fa-triangle-exclamation" />

<h3>ForgetPasswordView</h3>


@if(!string.IsNullOrEmpty(responseAPI)){
	<EditForm Model="ForgetPasswordUser">
		
		<div class="form">
			<label>OTP</label>
			<InputText type="text" class="form-control" @bind-Value="ForgetPasswordUser.OTP" />
			<ValidationMessage For="()=>ForgetPasswordUser.OTP" style="color:red;" />

		</div>

		<button type="submit" class="btn btn-primary" @onclick="ForgetPasswordOTP">
			Confirm
		</button>

	</EditForm>
}else{
	<EditForm Model="ForgetPasswordUser">
		<div class="form">
			<label>Email</label>
			<InputText type="text" class="form-control" @bind-Value="ForgetPasswordUser.Email" />
			<ValidationMessage For="()=>ForgetPasswordUser.Email" style="color:red;" />
		</div>
		<div class="form">
			<label>Phone Number</label>
			<InputText type="text" class="form-control" @bind-Value="ForgetPasswordUser.PhoneNumber" />
			<ValidationMessage For="()=>ForgetPasswordUser.PhoneNumber" style="color:red;" />
		</div>
		<div class="form">
			<label>Username</label>
			<InputText type="text" class="form-control" @bind-Value="ForgetPasswordUser.Username" />
			<ValidationMessage For="()=>ForgetPasswordUser.Username" style="color:red;" />

		</div>

		<button type="submit" class="btn btn-primary" @onclick="ForgetPasswordMethor">Check</button>

	</EditForm>
}