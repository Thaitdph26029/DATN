<style>
	.number-input {
		display: flex;
		align-items: center;
	}

	.input-wrapper {
		display: flex;
		align-items: center;
		border: 1px solid #ccc;
	}

	.input-field {
		margin-left: 10px;
		width: 40px;
		text-align: center;
		border: none;
		background-color: transparent;
		pointer-events: none;
		height: 80%;
	}

	.minus-button, .plus-button {
		width: 30px;
		height: 30px;
		border: none;
		color: #337ab7;
		font-weight: bold;
		cursor: pointer;
	}

		.minus-button:hover,
		.plus-button:hover {
			color: #286090;
		}

	.btn_continuebuy {
		margin: 15px 20px 0 0;
		color: #ffffff;
		background-color: #333333;
		padding: 8px 25px;
		font-size: 15px;
	}

	.noteBill {
		font-size: 15px;
		font-weight: 700;
		font-family: Futura;
		margin: 6px 0px;
		color: #666666;
		margin-top: 20px;
	}

	.inputNoteBill {
		width: 100%;
		padding: 10px 0px 0px 10px;
		height: 150px;
		font-family: Futura;
	}

	.billPay {
		padding: 25px;
		border: 1px solid #333333;
		font-weight: 600;
	}

	.btnBillPay {
		width: 100%;
		border: none;
		background-color: #e32124;
		color: #ffffff;
		padding: 15px;
		margin-top: 15px;
	}
</style>

<div class="container row">	
	
	<div class="col-md-8">
		<p style="font-size:21px;font-weight:500;font-family:Futura;margin-bottom:10px">Giỏ hàng</p>
		@foreach (var x in _lstCI)
		{
			var img = _lstImg.Where(c => c.ProductItemId == x.ProductItemId).OrderBy(c => c.STT).Select(c => c.PathImage).FirstOrDefault();
			_pi_s_vm = _lstPrI_show_VM.Where(c => c.Id == x.ProductItemId).FirstOrDefault();
			<div style="display:flex;justify-content:space-between;font-family:'Times New Roman'">
				<div style="display:flex;justify-content:center;align-items:center">
					<img src="/images/@img" alt="" style="width:110px;height:110px;">
					<div style="display:flex;flex-direction:column;justify-content:space-between;color:#333333;font-weight:700;font-size:17px;text-align:left;margin-left:20px">
						<label>@_pi_s_vm.Name</label>
						<label style="font-weight:500">@(_pi_s_vm.ColorName + ", " + _pi_s_vm.SizeName)</label>
						<label style="font-weight:500">@((_pi_s_vm.CostPrice)?.ToString("#,##0"))đ</label>
						<div class="number-input">
							<div class="input-wrapper">
								<button class="minus-button" @onclick="()=>SL_Tru(x)">-</button>
								<input type="number" class="input-field" readonly @bind-value="@x.Quantity">
								<button class="plus-button" @onclick="()=>SL_Cong(x)">+</button>
							</div>
						</div>
					</div>
				</div>
				<div style="display:flex;flex-direction:column;justify-content:space-between">
					<label style="cursor:pointer;" @onclick="()=>DeleteCI(x)">Xóa sản phẩm</label>
					<label>@((x.Quantity * _pi_s_vm.CostPrice)?.ToString("#,##0")) đ</label>
				</div>
			</div>
			<hr style="margin-top:10px;margin-bottom:10px;height:2px" />
		}
		<div>
			<button class="btn_continuebuy">
				TIẾP TỤC MUA SẮM SẢN PHẨM KHÁC
			</button><br />
			<label class="noteBill">Ghi chú đơn hàng</label> <br />
			<textarea class="inputNoteBill" placeholder="Ghi chú">

			</textarea>

		</div>
	</div>
	<div class="col-md-4">
		<p style="font-size:21px;font-weight:500;font-family:Futura;margin-bottom:10px">Đơn hàng</p>
		<div class="billPay">
			<div style="display:flex;justify-content:space-between">
				<label>Tổng tiền</label>
				<label style="color:#e32124">@(_tongTien?.ToString("#,##0")) đ</label>
			</div>
			<div>
				<button class="btnBillPay" @onclick="CreateBill">
					Thanh toán
				</button>
			</div>
		</div>
	</div>
</div>