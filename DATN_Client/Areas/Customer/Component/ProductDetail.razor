        border-radius: 20px;
        padding: 5px;
    }

    .input-field {
        margin-left: 10px;
        width: 50px;
        text-align: center;
        border: none;
        background-color: transparent;
        pointer-events: none;
    }

    .minus-button,
    .plus-button {
        width: 30px;
        height: 30px;
        border: none;
        background-color: transparent;
        color: #337ab7;
        font-weight: bold;
        cursor: pointer;
    }

        .minus-button:hover,
        .plus-button:hover {
            color: #286090;
        }

    .custom-button {
        background-color: lightgray;
        color: black;
    }

        .custom-button:focus {
            background-color: blue;
            color: white;
        }


</style>
