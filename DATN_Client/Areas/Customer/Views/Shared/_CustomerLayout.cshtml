    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<style>
    .imgInHeader {
        width: 25%;
        cursor: pointer;
    }

    .hinhtron {
        border-radius: 50%;
        background-color: #7dccff;
        padding: 10px;
        margin-right: 10px;
    }

    .hearderLogo {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
    }

    .telephone {
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Futura;
        cursor: pointer;
    }

    .imgUserHeader {
        width: 150%;
        cursor: pointer;
    }

    .imgCartHeader {
        width: 150%;
        cursor: pointer;
    }

    .countCart {
        position: absolute;
        background-color: red;
        padding: 2px 5px 2px 5px;
        border-radius: 50%;
        font-size: 10px;
        color: white;
        top: -10px;
        right: -20px;
    }

    .borderHeader {
        border-bottom: 2px solid #f3f3f3;
        padding-bottom: 10px;
    }

    .navbarHeader {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .aNavbar {
        text-decoration: none;
        color: #333333;
        padding: 15px
    }

        .aNavbar:hover {
            color: #7dccff;
        }

    .navbarHeader ul {
        list-style: none;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .navbarHeader ul li {
            position: relative;
        }

            .navbarHeader ul li ul {
                display: none;
            }

            .navbarHeader ul li:hover ul {
                position: absolute;
                display: flex;
                flex-direction: column;
                display: block;
                z-index: 99;
                /* left: -20px;*/
                background-color: #fff;
                color: #000;
                width: fit-content;
                padding-left: 5px;
                font-size: 15px;
            }

            .navbarHeader ul li ul li {
                text-align: left;
                color: #000;
                padding-left: 0px;
            }

                .navbarHeader ul li ul li:hover a {
                    color: #7dccff;
                    text-align: left;
                    background-color: #f1f1f1;
                }

                .navbarHeader ul li ul li a {
                    display: block;
                    width: 100%;
                    color: #000;
                    text-align: left;
                    padding: 10px;
                    align-items:flex-start;
                }

    .absoluteContent {
        display:none;
        position: absolute;
        right: -10px;
        z-index: 98;
    }


    .contentUser {
        display: flex;
        justify-content: space-between;
        width: 150px;
        background-color: red;
        padding: 10px 5px 10px 5px;
    }

    .relativeContent:hover .absoluteContent{
        display:block;
    }
</style>
<body>
    <div class="borderHeader">
        <div class="hearderLogo container">
            <div class="telephone">
                <i class="fa-solid fa-phone hinhtron" style="color: #ffffff;"></i>
