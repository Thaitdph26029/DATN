<div class="card">
    <div class="card-body">
        <div class="row" style="margin-bottom:30px;">
            <div class="col-md-6">
                <EditForm Model="user_VM">
                    <div class="row">
                        <div class="col-md-8">
                            <InputText class="form-control" @bind-Value="user_VM.UserName" placeholder="Tìm kiếm theo tên đăng nhập" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary" @onclick="SearchByUsername">Tìm kiếm</button>
                        </div>
                    </div>
                </EditForm>
            </div>
            <div class="col-md-6" style="text-align:right;">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddUser">
                    Add User
                </button>
            </div>
        </div>
        @if (users == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align:center">Tên người dùng</th>
                        <th style="text-align:center">Tên đăng nhập</th>
                        <th style="text-align:center">Số điện thoại</th>
                        <th style="text-align:center">Email</th>
                        <th style="text-align:center">Giới tính</th>
                        <th style="text-align:center">Trạng thái</th>
                        <th style="text-align:center">Chức vụ</th>
                        <th style="text-align:center">Chỉnh sửa trạng thái</th>
                        <th style="text-align:center">Địa chỉ</th>
                        <th style="text-align:center">Cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in users)
                    {
                        <tr>
                            <td style="vertical-align:middle;text-align:center">@x.name</td>
                            <td style="vertical-align:middle;text-align:center">@x.username</td>
                            <td style="vertical-align:middle;text-align:center">@x.phonenumber</td>
                            <td style="vertical-align:middle;text-align:center">@x.email</td>
                            <td style="vertical-align:middle;text-align:center">@(x.sex == true ? "Nam" : " Nữ")</td>
                            <td style="vertical-align:middle;text-align:center">
                                 <span class="@(x.status==1?"badge bg-success":x.status==0?"badge bg-danger":"badge bg-warning")">
                                       @(x.status == 1 ? "Hoạt động" :x.status==0?"Ngừng hoạt động":"Chưa xác thực")
                                 </span>
                                </td>
                            <td style="vertical-align:middle;text-align:center">@x.role</td>
                            <td style="vertical-align:middle;text-align:center">
                                <div class="modal fade" id="Status-@x.id">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                            <!-- Phần tiêu đề của popup -->
                                    <div class="modal-header">
                                                <h4 class="modal-title">Thêm sản phẩm</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>

                                            <!-- Nội dung của popup -->
                                    <p>Bạn có đồng ý ngừng hoạt động người dùng này</p>
                                            <!-- Phần chân của popup -->
                                    <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                                <button type="button" class="btn btn-danger" @onclick="()=>ChangeStatusUser(x)" data-dismiss="modal">Xác nhận</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Status-@x.id">
                                    Ngừng hoạt động
                                </button>
                            </td>
                            <td style="vertical-align:middle;text-align:center">
                                <button style="border: none;border-radius: 15px;" class="btn btn-primary" type="button" @onclick="()=>GetAddressShipByUser(x.id)">
                                    Xem địa chỉ
                                </button>
                            </td>
                            <td style="vertical-align:middle;text-align:center">
                                <button style="border: none;border-radius: 15px;" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#UpdateUser" 
                                type="button" @onclick="()=>LoadFormUser(x)">
                                    Chỉnh sửa
                                </button>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>


